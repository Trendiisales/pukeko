{
  "compilerOptions": {
    "target": "es2020",
    "outDir": "lib",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "sourceMap": true
  },
  "compileOnSave": true,
  "include": [
    "."
  ],
  "exclude": [
    "node_modules"
  ]
}